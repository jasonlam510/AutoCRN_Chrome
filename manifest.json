{
  "manifest_version": 3,
  "name": "AutoCRN",
  "description": "Helps you a little bit when registering courses @ CityU",
  "version": "1.0.2",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "CityU Course Registration Helper"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://banweb.cityu.edu.hk/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://banweb.cityu.edu.hk/*"],
      "js": ["add_crn.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
